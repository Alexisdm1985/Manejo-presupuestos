@using Microsoft.AspNetCore.Identity;
@using manejo_presupuestos.Models.Usuarios;

@inject SignInManager<Usuario> SignInManager


<ul class="navbar-nav">

    @*Con SignInManager de Identity, podemos pasarle el usuario actual 
    y sabe si se encuentra conectado*@
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Hola, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }else
    {
        <li class="nav-item">
            <a class="nav-link dark-text" asp-controller="Usuarios" asp-action="Registro">Registro</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Login" asp-controller="Usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Login
                </button>
            </form>
        </li>
    }
</ul>