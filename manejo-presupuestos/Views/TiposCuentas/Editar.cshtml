@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo de Cuenta";
}

<h1>Crear tipo de cuenta: @Model.Nombre</h1>

@*Tags Helper para validaciones del modelo (se valida en el controller)*@
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Editar">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label class="form-label" asp-for="Nombre"></label>
        <input type="text" asp-for="Nombre" name="Nombre" id="Nombre" class="form-control" value="@Model.Nombre" />

        @*Validaciones*@
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <button type="submit" asp-controller="TiposCuentas" asp-action="Editar" class="btn btn-primary">
        Guardar Cambios
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}